{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2017",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "skipDefaultLibCheck": true,
    "rootDir": "./src/",
    "outDir": "./lib",
    "declaration": false,
    "skipLibCheck": true
  },
  "exclude": ["node_modules/",  "temp/**", "demo/**"]
}
